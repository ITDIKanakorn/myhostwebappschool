<?php
// เชื่อมต่อกับฐานข้อมูล MySQL
$condb = new mysqli("localhost", "root", "", "registration_system");

// ตรวจสอบว่าการเชื่อมต่อสำเร็จหรือไม่
if ($condb->connect_error) {
    die("Connection failed: " . $condb->connect_error);
}

// คำสั่ง SQL สำหรับดึงข้อมูลจากตาราง section
$sql = "SELECT section_name, subject_id, study_date, study_time, classroom, teacher_id FROM section";
$result = $condb->query($sql);

// ตรวจสอบผลลัพธ์และแสดงข้อมูล
$schedule = array();
if ($result->num_rows > 0) {
    while($row = $result->fetch_assoc()) {
        $schedule[] = $row;  // จัดเก็บข้อมูลตารางเรียนลงใน array
    }
} else {
    echo "ไม่พบข้อมูล";
}

// ปิดการเชื่อมต่อฐานข้อมูล
$condb->close();
?>


<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Class Schedule</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        table {
            margin-left: 300px;
            margin-top: 20px;
            border-collapse: collapse;
            max-width: 100%; 
            margin-bottom: 200px;
        }

        th, td {
            border: 1px solid #ccc;
            text-align: center;
            padding: 8px;
        }

        th {
            background-color: #333;
            color: white;
        }

        .day-column {
            width: 10%;
        }

        .time-column {
            width: 12%;
        }

        .schedule-cell {
            background-color: #cce5ff;
        }

        .info-section {
            font-size: 17px; 
            margin-left: 300px;
            margin-top: 20px;
            margin-bottom: 20px;
        }

        .heading-registered-subjects {
            color: orange;
            font-weight: bold;
            margin-left: 300px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h3 class="heading-registered-subjects">ตารางเรียนของรายวิชาที่ลงทะเบียนไว้แล้ว</h3>

    <div class="info-section">
        <p id="student-id">รหัสนักศึกษา : </p>
        <p id="student-name">ชื่อ-นามสกุล : </p>
        <p id="student-status">สถานภาพ : </p>
        <p id="class-year">ชั้น : </p>
        <p id="study-group">กลุ่มเรียน : </p>
        <p id="major-name">สาขาวิชา : </p>
        <p id="field-of-work">สาขางาน : </p>
        <p id="advisor">อาจารย์ที่ปรึกษา : </p>
    </div>

    <table>
        <tr>
            <th class="time-column">Day/Time</th>
            <th>8:00-9:00</th>
            <th>9:00-10:00</th>
            <th>10:00-11:00</th>
            <th>11:00-12:00</th>
            <th>12:00-13:00</th>
            <th>13:00-14:00</th>
            <th>14:00-15:00</th>
            <th>15:00-16:00</th>
        </tr>

        <?php
        // แสดงข้อมูลตารางเรียนตามวันต่างๆ
        $days = ['จันทร์', 'อังคาร', 'พุธ', 'พฤหัสบดี', 'ศุกร์']; // รายชื่อวัน

        foreach ($days as $day) {
            echo "<tr>";
            echo "<th class='day-column'>{$day}</th>";

            $previous_class = null; // เก็บข้อมูลวิชาก่อนหน้า
            $colspan = 1; // จำนวนช่องที่ต้องรวม

            // แสดงตารางเวลาในแต่ละช่อง
            for ($i = 0; $i < 8; $i++) {
                $found = false; // เริ่มต้นไม่พบวิชา

                foreach ($schedule as $class) {
                    // แยกช่วงเวลาเริ่มต้นและสิ้นสุดออกจากกัน
                    $timeParts = explode(' - ', $class['study_time']); // แยกเวลาเป็นช่วงเริ่มและสิ้นสุด
                    // แปลงเวลาเริ่มต้นและเวลาสิ้นสุดจากรูปแบบ H.i ให้เป็น H:i
                    $start_time = DateTime::createFromFormat('H.i', str_replace(' น.', '', trim($timeParts[0])))->format('H:i');
                    $end_time = DateTime::createFromFormat('H.i', str_replace(' น.', '', trim($timeParts[1])))->format('H:i');

                    // ตรวจสอบวันและช่วงเวลาที่ตรงกัน
                    if ($class['study_date'] == $day && ($start_time <= ($i + 8).":00" && $end_time > ($i + 8).":00")) {
                        if ($previous_class === $class) {
                            $colspan++; // หากเป็นวิชาเดียวกับคาบก่อนหน้า ให้เพิ่ม colspan
                        } else {
                            if ($previous_class !== null) {
                                // แสดงเซลที่รวมกันก่อนหน้าหากเปลี่ยนวิชา
                                echo "<td class='schedule-cell' colspan='{$colspan}'>{$previous_class['subject_id']}<br>{$previous_class['section_name']}<br>ห้อง {$previous_class['classroom']}<br>ครู {$previous_class['teacher_id']}</td>";
                                $colspan = 1; // รีเซ็ตจำนวน colspan
                            }
                            $previous_class = $class; // อัปเดตวิชาก่อนหน้า
                        }
                        $found = true;
                        break; // พบแล้วออกจากลูป
                    }
                }

                if (!$found) {
                    if ($previous_class !== null) {
                        // แสดงเซลที่รวมกันก่อนหน้าหากไม่มีข้อมูลในช่องนี้
                        echo "<td class='schedule-cell' colspan='{$colspan}'>{$previous_class['subject_id']}<br>{$previous_class['section_name']}<br>ห้อง {$previous_class['classroom']}<br>ครู {$previous_class['teacher_id']}</td>";
                        $previous_class = null; // รีเซ็ตข้อมูลวิชาก่อนหน้า
                    } else {
                        echo "<td></td>"; // แสดงช่องว่างหากไม่มีวิชา
                    }
                }
            }

            // แสดงเซลที่รวมกันสุดท้ายของแต่ละวัน
            if ($previous_class !== null) {
                echo "<td class='schedule-cell' colspan='{$colspan}'>{$previous_class['subject_id']}<br>{$previous_class['section_name']}<br>ห้อง {$previous_class['classroom']}<br>ครู {$previous_class['teacher_id']}</td>";
            }

            echo "</tr>";
        }
        ?>
    </table>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            fetch('../fetch/fetch_student_info.php')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('student-id').textContent += data['รหัสนักศึกษา'];
                    document.getElementById('student-name').textContent += data['ชื่อ-นามสกุล'];
                    document.getElementById('student-status').textContent += data['สถานภาพ'];
                    document.getElementById('class-year').textContent += data['ชั้น'];
                    document.getElementById('study-group').textContent += data['กลุ่มเรียน'];
                    document.getElementById('major-name').textContent += data['สาขาวิชา'];
                    document.getElementById('field-of-work').textContent += data['สาขางาน'];
                    document.getElementById('advisor').textContent += data['อาจารย์ที่ปรึกษา'];
                })
                .catch(error => console.error('Error fetching student info:', error));
        });
    </script>

</body>
</html>
