        if (isset($_SESSION['user'])) {
            // Determine the profile image based on the user's role
            $profileImage = '';
            if (isset($_SESSION['role']) && $_SESSION['role'] == 'teacher') {
                $profileImage = '../assets/dist/img/teacher.png'; // Replace with the teacher's profile image path
            } elseif (isset($_SESSION['role']) && $_SESSION['role'] == 'student') {
                $profileImage = '../assets/dist/img/stu.png'; // Replace with the student's profile image path
            }

            echo '<li class="nav-item d-none d-sm-inline-block">
                  <a class="nav-link text-white" style="display: flex; align-items: center; font-weight: bold; padding: 0 15px;">
                      <span style="margin-right: 10px; font-size: 19px;" data-translate="username">
                           ' . htmlspecialchars($_SESSION['user']) . '
                      </span>
                      <img src="' . htmlspecialchars($profileImage) . '" alt="Profile Picture" style="width: 35px; height: 35px; border-radius: 50%; box-shadow: 0 0 4px rgba(0,0,0,0.3);">
                  </a>
                  </li>';
        }
        ?>

        <!-- Language Switch Icon -->
