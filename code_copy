<?php
// เชื่อมต่อกับฐานข้อมูล MySQL
$condb = new mysqli("localhost", "root", "", "registration_system");

// ตรวจสอบว่าการเชื่อมต่อสำเร็จหรือไม่
if ($condb->connect_error) {
    die("Connection failed: " . $condb->connect_error);
}

// คำสั่ง SQL สำหรับดึงข้อมูลจากตาราง section และ teacher
$sql = "
    SELECT 
        section.section_name, 
        section.subject_id, 
        section.study_date, 
        section.study_time, 
        section.classroom, 
        teacher.name_sername 
    FROM 
        section 
    JOIN 
        teacher 
    ON 
        section.teacher_id = teacher.num_teacher";
$result = $condb->query($sql);

// ตรวจสอบผลลัพธ์และแสดงข้อมูล
$schedule = array();
if ($result->num_rows > 0) {
    while($row = $result->fetch_assoc()) {
        $schedule[] = $row;  // จัดเก็บข้อมูลตารางเรียนลงใน array
    }
} else {
    echo "ไม่พบข้อมูล";
}

// ปิดการเชื่อมต่อฐานข้อมูล
$condb->close();
?>

<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Class Schedule</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        table {
            margin-left: 300px;
            margin-top: 20px;
            border-collapse: collapse;
            max-width: 100%; 
            margin-bottom: 200px;
        }

        th, td {
            border: 1px solid #ccc;
            text-align: center;
            padding: 8px;
        }

        th {
            background-color: #333;
            color: white;
        }

        .day-column {
            width: 10%;
        }

        .time-column {
            width: 12%;
        }

        .schedule-cell {
            background-color: #cce5ff;
        }

        .info-section {
            font-size: 17px; 
            margin-left: 300px;
            margin-top: 20px;
            margin-bottom: 20px;
        }

        .heading-registered-subjects {
            color: orange;
            font-weight: bold;
            margin-left: 300px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h3 class="heading-registered-subjects">ตารางเรียนของรายวิชาที่ลงทะเบียนไว้แล้ว</h3>

    <div class="info-section">
        <p id="student-id">รหัสนักศึกษา : </p>
        <p id="student-name">ชื่อ-นามสกุล : </p>
        <p id="student-status">สถานภาพ : </p>
        <p id="class-year">ชั้น : </p>
        <p id="study-group">กลุ่มเรียน : </p>
        <p id="major-name">สาขาวิชา : </p>
        <p id="field-of-work">สาขางาน : </p>
        <p id="advisor">อาจารย์ที่ปรึกษา : </p>
    </div>

    <table>
        <tr>
            <th class="time-column">Day/Time</th>
            <th>8:00-9:00</th>
            <th>9:00-10:00</th>
            <th>10:00-11:00</th>
            <th>11:00-12:00</th>
            <th>12:00-13:00</th>
            <th>13:00-14:00</th>
            <th>14:00-15:00</th>
            <th>15:00-16:00</th>
        </tr>

        <?php
        // รายชื่อวัน
        $days = ['จันทร์', 'อังคาร', 'พุธ', 'พฤหัสบดี', 'ศุกร์'];

        foreach ($days as $day) {
            echo "<tr>";
            echo "<th class='day-column'>{$day}</th>";

            $previous_class = null;
            $colspan = 1; // จำนวนช่องที่ต้องรวมเริ่มต้นเป็น 1

            for ($i = 0; $i < 8; $i++) {
                $current_time = ($i + 8) . ":00"; // เวลาในแต่ละช่อง
                $found = false;

                foreach ($schedule as $class) {
                    // แปลงเวลาเริ่มและจบเป็น H:i
                    $timeParts = explode(' - ', $class['study_time']);
                    $start_time = DateTime::createFromFormat('H.i', str_replace(' น.', '', trim($timeParts[0])))->format('H:i');
                    $end_time = DateTime::createFromFormat('H.i', str_replace(' น.', '', trim($timeParts[1])))->format('H:i');

                    // ตรวจสอบวันและช่วงเวลาที่ตรงกัน
                    if ($class['study_date'] == $day && ($start_time <= $current_time && $end_time > $current_time)) {
                        if ($previous_class === $class) {
                            $colspan++; // ถ้าเป็นวิชาเดิมก็รวม colspan
                        } else {
                            if ($previous_class !== null) {
                                // แสดงเซลก่อนหน้านี้
                                echo "<td class='schedule-cell' colspan='{$colspan}'>{$previous_class['subject_id']}<br>{$previous_class['section_name']}<br>ห้อง {$previous_class['classroom']}<br> {$previous_class['name_sername']}</td>";
                            }
                            $colspan = 1; // รีเซ็ตจำนวน colspan
                            $previous_class = $class; // อัพเดตวิชาก่อนหน้า
                        }
                        $found = true;
                        break;
                    }
                }

                if (!$found) {
                    // ถ้าไม่มีวิชาที่ตรงกับช่วงเวลานั้น
                    if ($previous_class !== null) {
                        echo "<td class='schedule-cell' colspan='{$colspan}'>{$previous_class['subject_id']}<br>{$previous_class['section_name']}<br>ห้อง {$previous_class['classroom']}<br> {$previous_class['name_sername']}</td>";
                        $previous_class = null;
                        $colspan = 1; // รีเซ็ต colspan
                    } else {
                        echo "<td></td>"; // ช่องว่างถ้าไม่มีวิชา
                    }
                }
            }

            // ตรวจสอบเซลสุดท้ายในแถว
            if ($previous_class !== null) {
                echo "<td class='schedule-cell' colspan='{$colspan}'>{$previous_class['subject_id']}<br>{$previous_class['section_name']}<br>ห้อง {$previous_class['classroom']}<br> {$previous_class['name_sername']}</td>";
            } else {
                echo "<td></td>"; // เพิ่มเซลว่างสำหรับเซลสุดท้ายที่อาจหายไป
            }

            echo "</tr>";
        }
        ?>
    </table>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            fetch('../fetch/fetch_student_info.php')
                .then(response => response.json())
                .then(data => {
                    document.getElementById("student-id").innerHTML = "รหัสนักศึกษา: " + data.student_id;
                    document.getElementById("student-name").innerHTML = "ชื่อ-นามสกุล: " + data.student_name;
                    document.getElementById("student-status").innerHTML = "สถานภาพ: " + data.student_status;
                    document.getElementById("class-year").innerHTML = "ชั้น: " + data.class_year;
                    document.getElementById("study-group").innerHTML = "กลุ่มเรียน: " + data.study_group;
                    document.getElementById("major-name").innerHTML = "สาขาวิชา: " + data.major_name;
                    document.getElementById("field-of-work").innerHTML = "สาขางาน: " + data.field_of_work;
                    document.getElementById("advisor").innerHTML = "อาจารย์ที่ปรึกษา: " + data.advisor;
                });
        });
    </script>
</body>
</html>
